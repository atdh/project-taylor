{
  "job-scraper": {
    "name": "job-scraper",
    "description": "Fetches job listings from multiple sources (Apify, Firecrawl)",
    "url": "http://localhost:8000",
    "input_schema": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "enum": ["apify", "firecrawl"],
          "description": "Job source platform"
        },
        "search_term": {
          "type": "string",
          "description": "Job search query"
        },
        "location": {
          "type": "string",
          "description": "Job location or 'remote'"
        },
        "filters": {
          "type": "object",
          "properties": {
            "experience": {
              "type": "string",
              "enum": ["entry", "mid", "senior"]
            },
            "posted_within": {
              "type": "string",
              "enum": ["1d", "7d", "30d"]
            }
          }
        },
        "limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 50
        }
      },
      "required": ["search_term"]
    }
  },
  "github-jobs": {
    "name": "github-jobs",
    "description": "Searches GitHub for job opportunities in repositories, issues, and discussions",
    "url": "http://localhost:8004",
    "input_schema": {
      "type": "object",
      "properties": {
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Job-related keywords to search for"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Programming languages required"
        },
        "location": {
          "type": "string",
          "description": "Preferred job location"
        },
        "experience_level": {
          "type": "string",
          "enum": ["entry", "mid", "senior"],
          "description": "Required experience level"
        },
        "created_within": {
          "type": "string",
          "enum": ["1d", "7d", "30d"],
          "default": "30d",
          "description": "Time window for job listings"
        },
        "min_stars": {
          "type": "integer",
          "minimum": 0,
          "default": 10,
          "description": "Minimum repository stars"
        }
      }
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "jobs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "company": { "type": "string" },
              "company_url": { "type": "string" },
              "location": { "type": "string" },
              "description": { "type": "string" },
              "requirements": { "type": "string" },
              "url": { "type": "string" },
              "source": {
                "type": "string",
                "enum": ["github_repo", "github_issue", "github_discussion"]
              },
              "posted_date": { "type": "string" },
              "metadata": {
                "type": "object",
                "properties": {
                  "repository": { "type": "string" },
                  "stars": { "type": "integer" },
                  "language": { "type": "string" },
                  "topics": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "metadata": {
          "type": "object",
          "properties": {
            "source": { "type": "string" },
            "total_results": { "type": "integer" },
            "query_params": { "type": "object" },
            "timestamp": { "type": "string" }
          }
        }
      }
    }
  },
  "filter-service": {
    "name": "filter-service",
    "description": "Filters and ranks job listings based on relevance",
    "url": "http://localhost:8001",
    "input_schema": {
      "type": "object",
      "properties": {
        "jobs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "description": { "type": "string" },
              "requirements": { "type": "string" }
            }
          }
        },
        "criteria": {
          "type": "object",
          "properties": {
            "required_skills": {
              "type": "array",
              "items": { "type": "string" }
            },
            "preferred_skills": {
              "type": "array",
              "items": { "type": "string" }
            },
            "experience_level": {
              "type": "string",
              "enum": ["entry", "mid", "senior"]
            },
            "location_preference": {
              "type": "string",
              "enum": ["remote", "hybrid", "onsite"]
            }
          }
        }
      },
      "required": ["jobs", "criteria"]
    }
  },
  "resume-generator": {
    "name": "resume-generator",
    "description": "Generates tailored resumes using LLM and document formatting",
    "url": "http://localhost:8002",
    "input_schema": {
      "type": "object",
      "properties": {
        "job_description": {
          "type": "string",
          "description": "Target job description"
        },
        "base_resume": {
          "type": "string",
          "description": "Original resume content"
        },
        "output_format": {
          "type": "string",
          "enum": ["docx", "pdf"],
          "default": "docx"
        },
        "template_name": {
          "type": "string",
          "description": "Optional template to use"
        },
        "custom_instructions": {
          "type": "string",
          "description": "Additional tailoring instructions"
        }
      },
      "required": ["job_description", "base_resume"]
    }
  },
  "email-delivery": {
    "name": "email-delivery",
    "description": "Handles email composition and delivery",
    "url": "http://localhost:8003",
    "input_schema": {
      "type": "object",
      "properties": {
        "to_email": {
          "type": "string",
          "format": "email"
        },
        "subject": {
          "type": "string"
        },
        "company_name": {
          "type": "string"
        },
        "position_name": {
          "type": "string"
        },
        "recipient_name": {
          "type": "string"
        },
        "custom_message": {
          "type": "string"
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filename": { "type": "string" },
              "content": { "type": "string", "format": "base64" },
              "content_type": { "type": "string" }
            }
          }
        }
      },
      "required": ["to_email", "subject", "company_name", "position_name"]
    }
  }
}
