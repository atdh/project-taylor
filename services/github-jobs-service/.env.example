# Service Configuration
LOG_LEVEL=INFO
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_SECONDS=30

# GitHub Configuration
GITHUB_API_KEY=your_github_personal_access_token_here
GITHUB_API_VERSION=2022-11-28

# Search Configuration
MAX_RESULTS_PER_QUERY=100
MIN_REPO_STARS=10
DEFAULT_SEARCH_WINDOW_DAYS=30

# Rate Limiting
RATE_LIMIT_REQUESTS=5000
RATE_LIMIT_PERIOD_HOURS=1

# Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Error Handling
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1

# Monitoring (Optional)
ENABLE_METRICS=true
METRICS_PORT=9092

# Development Settings
DEBUG=false
PRETTY_PRINT_JSON=true

# GitHub Enterprise (Optional)
GITHUB_ENTERPRISE_URL=
GITHUB_ENTERPRISE_API_KEY=

# Filtering Settings
MIN_DESCRIPTION_LENGTH=100
REQUIRED_SECTIONS=["requirements", "responsibilities"]
EXCLUDED_KEYWORDS=["spam", "scam", "unpaid"]

# Repository Filters
MIN_REPO_AGE_DAYS=30
MIN_REPO_CONTRIBUTORS=2
REQUIRED_REPO_TOPICS=["hiring", "jobs", "careers"]
